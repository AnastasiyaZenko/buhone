mixin header(obj = {})
    -
        obj = {...{
            tag: 'header',
            contacts: [
                {
                    href: 'tel:8 (111) 222-33-44',
                    text: '8 (111) 222-33-44',
                    ico: 'phone'
                },
                {
                    text: 'Пн-Пт 10:00-18:00',
                    ico: 'watch'
                },
                {
                    href: 'mailto:order@buhone.ru',
                    text: 'order@buhone.ru',
                    ico: 'mail'
                },
                {
                    text: 'Невский пр. 130',
                    ico: 'placeholder'
                }
            ],
        }, ...obj}
    #{obj.tag}.header&attributes(attributes)
        .container
            a(href="index.html").header__logo
                img(src="./images/logo.svg", alt="logo")
            .header__nav-wrapper
                ul.header__info
                    each item in obj.contacts
                        li
                            if item.ico
                                +icon(item.ico)
                            if item.href
                                a(href=item.href) !{item.text}
                            else
                                | !{item.text}
                nav.header__nav
                        a(href="#") Главная
                        a(href="#") Услуги
                        a(href="#") кейсы
                        a(href="#") о компании
                        a(href="#") контакты
                