            cards: [
                {
                    title: '90',
                    desc: 'Завершено крупных сделок',
                    link: 'Все кейсы',
                },
                {
                    title: '90',
                    desc: 'Завершено крупных сделок',
                    link: 'Все кейсы',
                },
                {
                    title: '90',
                    desc: 'Завершено крупных сделок',
                    link: 'Все кейсы',
                },
                {
                    title: '90',
                    desc: 'Завершено крупных сделок',
                    link: 'Все кейсы',
                    theme: 'blue',
